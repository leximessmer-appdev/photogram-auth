<h1>
  My likes
</h1>

<a href="/likes/new">
  Add a new like
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Photo
    </th>
    
    <th>
      Caption
    </th>
    
    <th>
      Image
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @likes.each do |like| %>
  <tr>
    <td>
      <%= like.id %>
    </td>

    <td>
      <%= like.photo_id %>
    </td>
    
    <td>
      <%= Photo.find(like.photo_id).caption %>
    </td>
    
    <td>
      <%= Photo.find(like.photo_id).image %>
    </td>

    <td>
      <%= time_ago_in_words(like.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(like.updated_at) %> ago
    </td>

    <td>
      <a href="/likes/<%= like.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
