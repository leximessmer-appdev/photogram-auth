<h1>
  All users
</h1>

<a href="/users/new">
  Add a new user
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>
    
    <th>
      Username
    </th>
    

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>
    
    <td>
      <%= user.username %>
    </td>

    <td>
      <%= time_ago_in_words(user.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(user.updated_at) %> ago
    </td>

    <td>
      <a href="/users/<%= user.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
